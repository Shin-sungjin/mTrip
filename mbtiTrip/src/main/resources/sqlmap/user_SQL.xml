<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<insert id="insert" parameterType="hashMap" useGeneratedKeys="true"
		keyProperty="UID">  
	    <![CDATA[
	    insert into User
	    (userId,userName,mbti,password,phone,mail, userrole) 
	    values
	    (#{userId},#{userName},#{mbti},#{password},#{phone},#{mail}, #{userrole})
	]]>
	</insert>
	<insert id="insertBis" parameterType="hashMap" useGeneratedKeys="true"
		keyProperty="UID">  
	    <![CDATA[
	    insert into User
	    (userId,userName,Bnum,password,phone,mail, userrole) 
	    values
	    (#{userId},#{userName},#{Bnum},#{password},#{phone},#{mail}, #{userrole})
	]]>
	</insert>
	<select id="login" resultType="hashmap">
	 <![CDATA[
		SELECT * 
		FROM User
		WHERE UserId = #{userId} And `password`=#{password}; 
	]]>
	</select>
	
	<select id="getbyuserId" resultType="com.example.test.User.DTO.UserDTO">
	 <![CDATA[
		SELECT * 
		FROM User
		WHERE UserId = #{userId}  
	]]>
	</select>
	

	<select id="getInfo" resultType="hashmap">
	 <![CDATA[
		SELECT  userID, userName, m.mbti, phone, mail, UID
		FROM User u
		join MBTi m
		on u.mbti = m.mbtiId
		WHERE UID = #{uID}; 
	]]>
	</select>
	
	<select id="getUser" resultType="com.example.test.User.DTO.UserDTO">
	<![CDATA[
	Select * 
	from User 
	where userName = #{username};
	]]>
	</select>

	<select id="getUID" resultType="Integer">
	 <![CDATA[
		SELECT  UID
		FROM User 
		WHERE userName = #{userName}; 
		]]>
	</select>

	<update id="updateUser">
	<![CDATA[
			Update User 
			set
			userName = #{userName},
			mbti = #{mbti},
			password = #{password},
			phone = #{phone},
			mail =#{mail}
			where UID = #{UID};
		]]>
	</update>
	<update id="updateBis">
	<![CDATA[
			Update User 
			set
			userName = #{userName},
			password = #{password},
			phone = #{phone},
			mail =#{mail}
			where UID = #{UID};
		]]>
	</update>
</mapper>